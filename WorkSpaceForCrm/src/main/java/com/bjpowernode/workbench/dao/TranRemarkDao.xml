<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.workbench.dao.TranRemarkDao">
            <insert id="saveRemark">
                insert into tbl_tran_remark(
                    id,
                    noteContent,
                    createTime,
                    createBy,
                    editFlag,
                    tranId
                )
                values (
                           #{id},
                           #{noteContent},
                           #{createTime},
                           #{createBy},
                           #{editFlag},
                           #{tranId}
                       )
            </insert>

            <update id="updateRemark">
                update tbl_tran_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag=#{editFlag}

                where id = #{id}
            </update>

            <delete id="deleteRemark">
                    delete from tbl_tran_remark where id=#{id}
            </delete>

            <select id="getRemarkListByTid" resultType="tranRemark">
                    select * from tbl_tran_remark where tranId=#{id}
            </select>
</mapper>

































